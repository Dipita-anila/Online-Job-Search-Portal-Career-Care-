                                    <h3>15</h3>
                                    <p>Jan</p>
                                </a>
                            </div>

                            <div class="blog_details">
                                <a class="d-inline-block" href="/Home/SingleBlogDetails?blogid=@data.BlogId">
                                    <h2>@data.BlogTitle</h2>
                                </a>
                                <p>
                                    @data.BlogDes
                                </p>
                                <ul class="blog-info-link">
                                    <li><a href="#"><i class="fa fa-user"></i> @data.BlogCatag</a></li>
                                    @*<li><a href="#"><i class="fa fa-comments"></i> 03 Comments</a></li>*@
                                </ul>
                            </div>
                        </article>
                    }



