

<!DOCTYPE html>

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Career Care</title>
    <link rel="stylesheet" href="~/Content/RegStyle.css">
    <link rel="stylesheet" href="~/Content/popup.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="wrapper">
        <div class="title-text">
            <div class="title login">
                Registration  <!--Eikne login class use holeo eitake job seeker registration banaichi-->
            </div>
            <div class="title signup">
                Registration
            </div>
        </div>
        <div class="form-container">
            <div class="slide-controls">
                <input type="radio" name="slide" id="login" checked>
                <input type="radio" name="slide" id="signup">
                <label for="login" class="slide login">Job Seeker</label>
                <label for="signup" class="slide signup">Company</label>
                <div class="slider-tab"></div>
            </div>
            <div class="form-inner">
                <!-- Registration Form  for Job Seeker-->
                @using (Html.BeginForm("JobSeekerReg", "Registration", FormMethod.Post, new { @class = "login" }))
                {

                    <div class="field">
                        <input type="text" id="JsName" name="JsName" placeholder="Name" required>
                    </div>
                    <div class="field">
                        <input type="email" id="JsEmail" name="JsEmail" placeholder="Email Address" required>
                    </div>
                    <div class="field">
                        <input type="date" id="JsDateOfBirth" name="JsDateOfBirth" placeholder="Date Of Birth" required>
                    </div>
                    <div class="field">
                        <input type="text" id="JsAddress" name="JsAddress" placeholder="Address" required>
                    </div>
                    <div class="field">
                        <input type="text" id="JsGender" name="JsGender" placeholder="Gender" required>
                    </div>
                    @*<div class="field">
                        <input type="number" id="JsPhone" name="JsPhone" placeholder="Phone" />
                    </div>*@

                    <div class="field">
                        <input type="password" id="JsPassword" name="JsPassword" placeholder="Password" required>
                    </div>


                    <div class="field btn">

                        <div class="btn-layer"> </div>
                        <input type="submit" value="submit" onclick="myFunction()">

                    </div>
                    @*<div class="signup-link">
                        Already Have an Account ?--> <a href="">Login now</a>
                        </div>*@

                }



                <!--Registration form for a company -->
                @using (Html.BeginForm("CompanyReg", "Registration", FormMethod.Post, new { @class = "signup" }))
                {

                    <div class="field ">
                        <input type="text" id="CmpName" name="CmpName" placeholder="Company Name" required>
                    </div>
                    <div class="field">
                        <input type="text" id="CmpCeo" name="CmpCeo" placeholder="Owner" required>
                    </div>
                    <div class="field">
                        <input type="text" id="CmpHeadQ" name="CmpHeadQ" placeholder="Street Address , city" required>
                    </div>
                    <div class="field">
                        <input type="email" id="CmpEmail" name="CmpEmail" placeholder="Email" required>
                    </div>
                    <div class="field">
                        <input type="number" id="CmpContact" name="CmpContact" placeholder="Phone" required>
                    </div>
                    <div class="field">
                        <input type="password" id="CmpPassword" name="CmpPassword" placeholder="Password" required>
                    </div>
                    <div class="field ">
                        <input type="text" id="CmpDescription" name="CmpDescription" placeholder="Company Description" required>
                    </div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input type="submit" value="Signup">
                    </div>

                }
            </div>
        </div>
        <div class="signup-link">
            <br />Already Have an Account ? <a href="/Login/SignIn">Login now</a>
        </div>
    </div>
    <script>
        const loginText = document.querySelector(".title-text .login");
        const loginForm = document.querySelector("form.login");
        const loginBtn = document.querySelector("label.login");
        const signupBtn = document.querySelector("label.signup");
        const signupLink = document.querySelector("form .signup-link a");
        signupBtn.onclick = (() => {
            loginForm.style.marginLeft = "-50%";
            loginText.style.marginLeft = "-50%";
        });
        loginBtn.onclick = (() => {
            loginForm.style.marginLeft = "0%";
            loginText.style.marginLeft = "0%";
        });
        signupLink.onclick = (() => {
            signupBtn.click();
            return false;
        });

        // When the user clicks on <div>, open the popup
        function myFunction() {
            //var popup = document.getElementById("myPopup");
            //popup.classList.toggle("show");
            window.alert("Registration is processing");

        }

    </script>
</body>
</html>